{
  "$schema": "../frontend/node_modules/@tauri-apps/cli/schema.json",
  "productName": "Goo",
  "version": "0.1.0",
  "identifier": "com.goo.tracker",
  "build": {
    "beforeBuildCommand": "npm run build --prefix frontend",
    "beforeDevCommand": "npm run dev --prefix frontend",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Goo",
        "width": 1180,
        "height": 780,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://image.tmdb.org data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
